<% include ../partials/header %>
<% include ../partials/nav %>
<h1 class="text-center">
	Edit <%= campground.location %>
</h1>
<div style="width:40% ; margin:30px auto">
	<form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
	  <div class="form-group">
	    <input type="text" class="form-control" id="Location" value="<%= campground.location %>" name="location">
	  </div>
	  <div class="form-group">
	    <input type="text" class="form-control" id="Image" value="<%= campground.image%>" name="image">
	  </div>
	  <div class="form-group">
	    <input type="text" class="form-control" id="Desc" value="<%= campground.desc %>" name="desc">
	  </div>
	  <div class="form-group">
	  	<button type="submit" class="btn btn-primary btn-block">Submit</button>
	  </div>
	</form>
	<a href="/campgrounds">campgrounds</a>
</div>

<% include ../partials/footer%>
