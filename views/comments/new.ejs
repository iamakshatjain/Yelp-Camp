<% include ../partials/header %>
<% include ../partials/nav %>
<h1 class="text-center">
	Create new Comment
</h1>
<div style="width:40% ; margin:30px auto">
	<form action="/campgrounds/<%= id %>/comments/" method="POST">
	  <div class="form-group">
	    <input type="text" class="form-control" id="Content" placeholder="Content" name="content" required>
	  </div>
	  <div class="form-group">
	    <input type="text" class="form-control" id="Author" placeholder="Author" name="author" value="<%= currentUser.username %>" required readonly>
	  </div>
	  
	  <div class="form-group">
	  	<button type="submit" class="btn btn-primary btn-block">Submit</button>
	  </div>
	</form>
</div>

